<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/royal_blue_90"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â†"
                android:textColor="@color/royal_blue_dark"
                android:backgroundTint="@color/gold"
                android:textSize="20sp"
                android:padding="8dp" />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/blackjack_minigame"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/supercell_magic"
                android:gravity="center" />
        </LinearLayout>

        <!-- Token Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/royal_blue_90"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/gold">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/crowntoken"
                    android:contentDescription="Token" />

                <TextView
                    android:id="@+id/tvTokenCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tokens Available: 0"
                    android:textColor="@color/gold"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Start Screen -->
        <androidx.cardview.widget.CardView
            android:id="@+id/startScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/royal_blue_90"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/gold">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLACKJACK"
                    android:textColor="@color/gold"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get as close to 21 as possible without going over!"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btnPlayWithToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Play with Token"
                    android:textColor="@color/royal_blue_dark"
                    android:backgroundTint="@color/gold"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnFreeplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/freeplay"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/royal_blue_light"
                    android:padding="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Game Screen -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gameScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/royal_blue_90"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/gold">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Dealer Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dealerprincess"
                        android:contentDescription="Dealer" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dealer"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:id="@+id/llDealerHand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tvDealerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dealer Score: 0+"
                    android:textColor="@color/gold"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp" />

                <!-- Player Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ivPlayerAvatar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="Player"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/player"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:id="@+id/llPlayerHand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tvPlayerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Score: 0"
                    android:textColor="@color/gold"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Game Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnHit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hit"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/green"
                        android:layout_marginEnd="8dp"
                        android:padding="16dp" />

                    <Button
                        android:id="@+id/btnStand"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/stand"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/red_accent"
                        android:layout_marginStart="8dp"
                        android:padding="16dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Result Screen -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resultScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="@color/royal_blue_90"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/gold">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvResultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOU WIN!"
                    android:textColor="@color/gold"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvResultMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Congratulations!"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/btnPlayAgain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/new_game"
                    android:textColor="@color/royal_blue_dark"
                    android:backgroundTint="@color/gold"
                    android:padding="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
